<Window x:Class="Analitik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Analitik" xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Loaded="Grid_Loaded">
        <lvc:PieChart x:Name="plot1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
            Series="{Binding Series}">
        </lvc:PieChart>
        <lvc:PieChart x:Name="plot1_1"
            Series="{Binding Series}" Margin="0,0,550,0">
        </lvc:PieChart>
        <lvc:PieChart x:Name="plot1_2"
            Series="{Binding Series}" Margin="275,0,275,0">
        </lvc:PieChart>
        <lvc:PieChart x:Name="plot1_3"
            Series="{Binding Series}" Margin="550,0,0,0">
        </lvc:PieChart>
    </Grid>
</Window>
